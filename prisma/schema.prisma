generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  password  String
  status    String
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([email])
  @@index([email])
  @@map("users")
}

model Fraction {
  id        Int      @id @default(autoincrement())
  location  String
  fraction  Decimal  @db.Decimal(10, 6)
  type      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([location])
  @@map("fractions")
}

model Property {
  id                Int        @id @default(autoincrement())
  title             String
  description       String
  location          String
  responsiblePerson String?
  contact           String
  whatsappContact   String?
  type              SaleOrRent
  price             Decimal    @db.Decimal(10, 2)
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt

  photos Photo[]

  @@index([location])
  @@map("properties")
}

model Photo {
  id         Int      @id @default(autoincrement())
  url        String
  isFeatured Boolean  @default(false)
  propertyId Int
  property   Property @relation(fields: [propertyId], references: [id])

  @@map("photos")
}

enum SaleOrRent {
  SALE
  RENT
}
